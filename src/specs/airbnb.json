{
	"info": {
		"title": "AirBnB",
		"description": "API to retrieve different info for a given user ID",
		"version": "1.0",
		"author": "h4ckademy",
		"url_base": "https://api.airbnb.com/"
		},

	"get_user": {
		"url" : "v2/users/",
		"http_method" : "GET",
		"parameters":[
			{
				"name": "id",
				"in": "path",
				"demanded": true
			},
			{
				"name":"client_id",
				"in": "query_string",
				"client_id": "3092nxybyb0otqw18e8nh5nty"
			}
		],
		"after":
			{
				"token_save": false,
				"user": "picture_url",
				"user": "first_name"
			}
	},
	"login": {
		"url" : "v2/login/",
		"http_method" : "POST",
		"parameters":[
			{
				"name": "id",
				"demanded": true
			},
			{
				"name": "password",
				"demanded": true
			}
		],
		"after": {
			"token_save": true
		},

		"logout":{
			"after": {
			"token": false
			}
		}
	}
}
