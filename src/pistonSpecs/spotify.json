{
  "info": {
    "title": "Spotify",
    "description": "API to retrieve info from Spotify",
    "version": "1.0",
    "author": "h4ckademy"
  },
  "defaults": {
    "baseUrl": "https://api.spotify.com"
  },
  "action": [{
    "name": "getAlbum",
    "uri": "https://api.spotify.com/v1/albums/{albumId}",
    "arguments": [
      "albumId"
    ],
    "extract": [
      "name",
      "release_date",
      "images.url"
    ]
  }, {
    "name": "getAlbumTracks",
    "uri": "https://api.spotify.com/v1/albums/{albumId}/tracks",
    "arguments": [
      "albumId"
    ],
    "extract": [
      "items.name",
      "items.track_number"
    ]
  }, {
    "name": "getUser",
    "uri": "https://api.spotify.com/v1/users/{userId}",
    "arguments": [
      "userId"
    ],
    "extract": [
      "display_name",
      "images.url"
    ]
  }, {
    "name": "getArtist",
    "uri": "https://api.spotify.com/v1/artists/{artistId}",
    "arguments": [
      "artistId"
    ],
    "extract": [
      "name",
      "genres",
      "images.url"
    ]
  }, {
    "name": "searchArtist",
    "uri": "https://api.spotify.com/v1/search",
    "qs": {
      "q": "{searchQuery}",
      "type": "{type}"
    },
    "arguments": [
      "searchQuery",
      "type"
    ],
    "extract": [
      "artists.items.name",
      "artists.items.popularity"
    ]
  }]
}
